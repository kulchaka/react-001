/*
  Animation:
  enter
  exit
*/
.order-enter
  transition .5s
  transform translateX(-120%)
  max-height 0
  &.order-enter-active
    max-height 60px
    transform translateX(0)

.order-exit
  transition .5s
  transform translateX(0)
  max-height 0
  &.order-exit-active
    transform translateX(120%)

.count-enter
  transition .5s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-exit
  transition .5s
  transform translateY(0)
  position: absolute;
  left 0
  top 0
  &.count-exit-active
    transform translateY(-100%)
